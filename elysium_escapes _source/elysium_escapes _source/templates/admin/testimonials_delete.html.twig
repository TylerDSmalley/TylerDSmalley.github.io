{% extends "admin/master.html.twig" %}

{% block title %}Delete Testimonial
{% endblock %}

{% block head %}
	<link rel="stylesheet" href="/styles/addDestinations.css">
	<script src="scripts/nav.js"></script>
	{{ parent() }}
{% endblock %}

{% block content %}
	
	<section class="section p-5">
		<div class="container">
				<br/><br/><br/><br/>
				<h3>Delete Testimonial</h3>
                    Testimonial ID: &nbsp;{{testimonial.id}}<br/>
				    Destination ID: &nbsp;{{testimonial.destination_id}}<br/>
					User ID: &nbsp;{{testimonial.user_id}}<br/>
					Comment Title: &nbsp;{{testimonial.comment_title }}<br/>
                    Comment Body: &nbsp;{{testimonial.comment_body }}<br/>
					Testimonial Image:&nbsp;<img src="/../{{ testimonial.image_filepath }}" width="250"/><br>
                <form method="POST">   
					<div class="submitButtonBox">
						<br/><br/>
                        <p><strong>Please confirm the deletion of this testimonial</strong></p>
						<input class="submitButton" type="submit" value="Yes, Delete">
					</div>
				</div>
			</form>
            <a href="/admin/testimonials/list">Cancel - Go Back to List</a>
		</div>
	</section>
{% endblock content %}