{% extends "base.html.twig" %}
{% block title %}Password Reset
{% endblock %}
{% block head %}
	<link rel="stylesheet" href="../styles/registration.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	{{ parent() }}
{% endblock %}

{% block content %}

	<section class="section p-5">

		<div class="container">

			<div class="row text-center g-2 mt-5">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<h3 class="h3 card-title" id="exampleModalNavLabel">Password Reset</h3>
						</div>
						<div class="modal-body">
							<form method="post" autocomplete="off" enctype="multipart/form-data">

								<div class="form-floating mb-3">
									<input type="email" class="form-control" id="floatingInput" name="email" placeholder="name@example.com">
									<label for="floatingInput">Email</label>
								</div>

								<div class="logInButtonBox">
									<button type="submit" class="btn logInButton">Send</button>
								</div>
							</form>
						</div>
						<div class="modal-footer">
                            <p>Remember your password?</p>
							<a class="logInButtonBox" href="https://travel.fsd01.ca/login">
								<button class="btn logInButton">Sign in</button>
							</a>
						</div>
					</div>
				</div>
			</div>

		</div>

	</section>

{% endblock %}